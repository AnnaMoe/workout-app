<!DOCTYPE html>
<html>
  <head>
    <title>WorkoutApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header role="banner">
      <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button"
              class="navbar-toggle"
              data-toggle="collapse"
              data-target="#bs-example-navbar-collapse-1">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to "Athletes Den", root_path, class: "navbar-brand" %>
          </div>

          <div class="navbar-collapse collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <li class="active"><%= link_to "Home", root_path %></li>
            </ul>
            <ul class= "nav navbar-nav navbar-right">
            <% unless user_signed_in? %>
              <li><%= link_to "Sign up", new_user_registration_path %></li>
              <li><%= link_to "Sign in", new_user_session_path %></li>
            <% else %>
              <% if user_signed_in? %>
                <div class="navbar-right">
                  <p class="navbar-text">Signed in as  <%= "#{current_user.email}" %></p>
                </div>
              <% end %>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <div class="row">
      <div class="col-md-12">
        <% flash.each do | key, message | %>
          <%# if key is not "notice", it is alert - danger will be returned %>
          <div class= "text-center alert alert-<%= key == 'notice' ? 'success' : 'danger'%>">
            <%= message %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
